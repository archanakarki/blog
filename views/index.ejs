<% include ./partials/header %>

<!--Jumbotron-->
<div class="jumbotron text-center">
        <h1 class="display-4">Hello, world!</h1>
        <p class="lead">This is a simple RESTful CRUD blog application operating and using Mongodb, Express and Node js.</p>
        <a class="btn btn-primary btn-lg" href="/blogs/new" role="button">Create a blog post</a>
</div>

<!--Blogs-->
        <!--Header-->
        <!-- <h3 class="display-3 text-center mt-5 mb-2">All blogs</h3> -->

        <!--All blogs-->
        <div class="container"> 
                <div class="row">
                <% blogs.forEach((blog)=>{ %>

                  <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                                <h3 class="display-5  text-center mt-5 mb-4"> <%= blog.title %> </h3>
                                <img class="img-fluid" src="<%=blog.image%>" alt="<%=blog.titile%>">
                                <p class="text-center my-3"><%=blog.created.toDateString() %></p>
                                <p class="text-justify"><%=blog.body.substring(0, 99)%> .... <a href="/blogs/<%=blog._id%>">Read More</a></p>
                  </div>

                  <% }) %>
                </div>
        </div> 
        <!--All blogs-->

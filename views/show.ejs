<% include ./partials/header %>

<div class="container text-center">
        <h1 class="display-4 my-3 disabled"><%=blog.title%></h1>
        <img class="img-fluid" src="<%=blog.image%>" alt="<%blog.title%>">
        <p class="text-center my-3"><%=blog.created.toDateString() %></p>
        <p class="text-justify"><%- blog.body%></p>
</div>

<div class="container">
        <div class="row">
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                 <a class="btn btn-success btn-block" href="/blogs/<%=blog._id%>/edit">Edit this blog</a>
                </div>
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger btn-block" type="submit">Delete blog</button>
                    </form>
                </div>
            </div>
</div>

<% include ./partials/footer %>

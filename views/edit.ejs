<% include ./partials/header %>


    <div style = "padding : 10vh 25vh" class="container">

            <h1 class="display-4"><small class="display-6">Editing</small> <span class="text-primary text-center"><%= blog.title %> </span></h1>
            <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                    <input type="text" class="form-control" placeholder="Title" name="blog[title]" value="<%=blog.title%>">
                    </div>
                    <div class="form-group">
                    <input type="text" class="form-control" placeholder="Image URL" name="blog[image]" value="<%=blog.image%>">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="blog[body]" id="blogBody" cols="30" rows="10" placeholder="Description"><%=blog.body%></textarea><br>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
    </div>

<% include ./partials/footer %>
